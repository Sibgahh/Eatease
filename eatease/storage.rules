// Grants a user access to their own user folder in Firebase Storage
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read any file
    match /{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated merchants to upload to their own products folder
    match /products/{userId}/{allImages=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 